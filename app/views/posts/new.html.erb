<%= form_for :post, url: posts_path do |f| %>
    
    <div class="field">
    <%= f.file_field :image%>
    <h4>Max file size = 2mb!</h4>
  </div>
    
    <p>
      <%= f.label :title %> <br>
      <%= f.text_field :title, rows: 1 %>
    </p>

    <p>
      <%= f.label :body %> <br>
      <%= f.text_area :body, rows: 5 %>
    </p>
    
      
    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to "Back", posts_path %>